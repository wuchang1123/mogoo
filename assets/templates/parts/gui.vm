<script>
$(function() {
	var eGui = $("#header-guibar"),
		eHandle = eGui && $(".handle", eGui),
		eWin = $(window),
		eBody = $("html,body"),
		state = "normal";
	eGui && eWin.scroll(function () {
		var stop = eWin.scrollTop();
		if (stop > 136) {
			state == "normal" && (state = "fixed") && eGui.addClass("guibar-fixed-top");
		} else {
			state == "fixed" && (state = "normal") && eGui.removeClass("guibar-fixed-top");
		}
	});
	eHandle && eHandle.click(function(e) {
		e.preventDefault();
		eBody.animate({"scrollTop": 0}, 300);
	});
});
</script>